{

    "reporter": "spec",

    "continueOnFail": false,

    "remote": false,

    "tests": {
      "src/test/PersonTest.js":      "Person",
      "src/test/EmployeeTest.js":    "Employee"
    },

    "server": {
      "runner": {
        "template": "src/test/JetRunner.jade",
        "styles": ["vendor/mocha/mocha/mocha.css"],
        "scripts": [
          "vendor/mocha/mocha/mocha.js",
          "vendor/chai/chai/chai.js"
        ]
      }
    },

    "cloud": {
      "service": "browserstack",
      "domain": "localhost",
      "username": "username",
      "access-key": "access-key",
      "max-duration": 300,
      "systems": [
        { "os": "Linux", "browser": "Firefox", "browser-version": "10" },
        { "os": "Linux", "browser": "Firefox", "browser-version": "11" }
      ]
    }

}