{
    "tests": {
        "src/test/ApplicationTest.js": "",
        "src/test/services/RouterTest.js": "build/lib/services/Router.js"
    },

    "server": {
        "port": 4444,
        "reporter": "spec",
        "runner": {
            "template": "src/test/JetRunner.jade",
            "styles": ["vendor/mocha/mocha/mocha.css"],
            "scripts": [
                "build/lib/Application.bundled.compressed.js",
                "vendor/mocha/mocha/mocha.js",
                "vendor/chai/chai/chai.js"
            ]
        }
    },

    "cloud": {
        "service": "browserstack",
        "reporter": "tap",
        "port": 4444,
        "domain": "localhost",
        "username": "username",
        "access-key": "access-key",
        "max-duration": 300,
        "systems": [
            { "os": "Linux", "browser": "Firefox", "browser-version": "10" },
            { "os": "Linux", "browser": "Firefox", "browser-version": "11" }
        ]
    }
