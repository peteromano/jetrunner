      assert = chai.assert;
      expect = chai.expect;
      mocha.setup({
        ignoreLeaks: true,
        //reporter: '#{reporter}',
        ui: '#{ui}'
      });
    if src
        script(src="#{src}")
    script(src="#{test}")
    script
      reporter = (this.mochaPhantomJS || mocha).run();